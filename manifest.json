{
  "manifest_version": 3,
  "name": "AI Tweet Detector",
  "description": "Detects AI-generated tweets on Twitter/X using GPTZero or Hugging Face.",
  "version": "1.1.0",
  "permissions": ["storage"],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; base-uri 'none'"
  },
  "host_permissions": [
    "https://twitter.com/*",
    "https://x.com/*",
    "https://api.gptzero.me/*",
    "https://router.huggingface.co/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://twitter.com/*", "https://x.com/*"],
      "js": ["filtering.js", "content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
